<CallTabContent>:
	orientation: 'vertical'

	MDBottomNavigation:
		panel_color: app.theme_cls.primary_color
		text_color_active: app.theme_cls.opposite_text_color

		MDBottomNavigationItem:
			name: 'calls'
			text: 'Вызовы'
			icon: 'phone'

			MDBoxLayout:
				id: calls
				orientation: 'vertical'
				size_hint: (1, 1)

		MDBottomNavigationItem:
			name: 'info'
			text: 'Информация'
			icon: 'fire'

			MDBoxLayout:
				id: info
				orientation: 'vertical'
				size_hint: (1, 1)


<PhoneTabContent>:
	orientation: 'vertical'

	ScrollView:
		MDBoxLayout:
			id: content
			orientation: 'vertical'
			size_hint: (1, None)
			height: self.minimum_height
			do_scroll_x: False
			padding: [dp(5), 0]
			spacing: dp(10)

			MDLabel:
				size_hint: (1, None)
				height: dp(50)
				text: root.title
				font_style: 'H5'

			MDLabel:
				size_hint: (1, None)
				height: dp(75)
				text: f'{root.description} '*5
				valign: 'top'
				halign: 'left'
				theme_text_color: 'Secondary'

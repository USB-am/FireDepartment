<FDNotebook>:
	orientation: 'vertical'
	size_hint: (1, 1)

	MDBoxLayout:
		size_hint: 1, None
		height: dp(60)
		padding: [dp(5), dp(5)]
		md_bg_color: app.theme_cls.primary_color

		ScrollView:
			MDBoxLayout:
				id: tab_list
				orientation: 'horizontal'
				size_hint: (None, 1)
				width: self.minimum_width
				do_scroll_y: False
				padding: [dp(5), 0]
				spacing: dp(10)

	MDBoxLayout:
		id: content
		orientation: 'vertical'
		size_hint: (1, 1)

		MDLabel:
			size_hint: (1, 1)
			text: 'Ничего не выбрано'
			halign: 'center'
			valign: 'center'


<_NotebookMark>:
	orientation: 'horizontal'
	size_hint: (None, 1)
	width: dp(200)
	padding: [dp(10), dp(3), 0, 0]

	MDTextButton:
		id: tab_btn
		size_hint: (None, 1)
		width: dp(150)
		halign: 'left'
		valign: 'center'
		text: root.title

	MDIconButton:
		id: close_btn
		icon: 'close'

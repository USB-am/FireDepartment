<FDCalendar>:
	orientation: 'horizontal'
	# adaptive_height: True
	size_hint: (1, None)
	height: dp(250)
	padding: [dp(5), dp(10)]

	MDBoxLayout:
		# Calendar layout
		orientation: 'vertical'
		size_hint: (None, None)
		size: (root.height, root.height)

		MDBoxLayout:
			orientation: 'horizontal'
			size_hint: (1, None)
			height: dp(50)

			MDIconButton:
				icon: 'menu-left'
				size_hint: (None, None)
				size: (dp(50), dp(50))

			MDLabel:
				text: 'Ноябрь'
				halign: 'center'

			MDIconButton:
				icon: 'menu-right'
				size_hint: (None, None)
				size: (dp(50), dp(50))

		MDGridLayout:
			# Week day titles
			size_hint: (1, None)
			height: dp(10)
			cols: 7
			padding: [0, 0, 0, dp(5)]

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'ПН'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'ВТ'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'СР'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'ЧТ'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'ПТ'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'СБ'
				halign: 'center'

			MDLabel:
				theme_text_color: 'Custom'
				text_color: app.theme_cls.text_color[:-1] + [.8]
				font_style: 'Overline'
				text: 'ВС'
				halign: 'center'

		MDGridLayout:
			# Calenar grid
			md_bg_color: (0, 0, 0, .1)
			id: calendar_grid
			cols: 7

	MDBoxLayout:
		# Addition information layout
		orientation: 'vertical'


<_CalendarGridDay>:
	text: str(root.day) if root.day >= 10 else '0' + str(root.day)
	halign: 'center'
	theme_text_color: 'Primary' if root.this_month else 'Hint'

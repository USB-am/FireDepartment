#:import Settings settings.settings


<TableItem>
	size_hint: 1, None
	size: self.width, 50
	padding: [20, 0]
	spacing: 10

	MDRectangleFlatIconButton:
		text_color: Settings.INVERTED_FONT_COLOR
		line_color: Settings.INVERTED_FONT_COLOR
		icon_color: Settings.INVERTED_FONT_COLOR
		icon: 'plus-circle-outline'
		text: 'Создать'
		on_press:
			page_name = self.parent.to_create
			Settings.PATH_MANAGER.forward(page_name)
			app.root.current = page_name

	MDRectangleFlatIconButton:
		text_color: Settings.INVERTED_FONT_COLOR
		line_color: Settings.INVERTED_FONT_COLOR
		icon_color: Settings.INVERTED_FONT_COLOR
		icon: 'playlist-edit'
		text: 'Изменить'
		on_press:
			page_name = self.parent.to_edit
			Settings.PATH_MANAGER.forward(page_name)
			app.root.current = page_name


<Options>
	MDBoxLayout:
		orientation: 'vertical'
		spacing: 10

		MDToolbar:
			title: 'Настройки'
			left_action_items:
				[['arrow-left', lambda x: app.root.move_to_back(x)]]
			md_bg_color: Settings.BACKGROUND_COLOR_OPACITY
			specific_text_color: Settings.FONT_COLOR
			elevation: 10

		ScrollView:
			GridLayout:
				cols: 1
				size_hint: 1, None
				height: self.minimum_height
				do_scroll_x: False
				padding: [20, 0]
				spacing: 10
				id: container
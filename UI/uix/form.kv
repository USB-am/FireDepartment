#:import os_join os.path.join
#:import Config config
#:import FDLabel,FDTitleLabel,FDButton UI.custom_widgets

<Form>
	BoxLayout:
		orientation: 'vertical'
		spacing: 10

		BoxLayout:
			canvas:
				Color:
					rgba: Config.BACKGROUND_COLOR_OPACITY
				Rectangle:
					pos: self.pos
					size: self.size

			size_hint: (1, None)
			size: (self.width, 70)
			padding: 10

			FDButton:
				size_hint: (None, None)
				size: (50, 50)
				on_press: print(app.root.current)

				Image:
					pos: self.parent.pos
					size: self.parent.size
					source: os_join(Config.IMAGES_DIR, 'back_button.png')

			FDTitleLabel:
				text: 'Title Label'

			FDLabel:
				size_hint: (None, None)
				size: (50, 50)

		ScrollView:
			GridLayout:
				cols: 1
				do_scroll_x: False
				size_hint: (1, None)
				height: self.minimum_height
				padding: 10
				spacing: 10
				id: field_list

		BoxLayout:
			canvas:
				Color:
					rgba: (1, 1, 1, 0)
				Rectangle:
					pos: self.pos
					size: self.size

			size_hint: (1, None)
			size: (self.width, 90)
			padding: 10

			FDButton:
				id: bottom_button
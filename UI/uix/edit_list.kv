#:import os_join os.path.join
#:import Config config
#:import FDLabel,FDTitleLabel,FDButton UI.custom_widgets


<EditList>
	BoxLayout:
		orientation: 'vertical'
		spacing: 10

		BoxLayout:
			canvas:
				Color:
					rgba: Config.BACKGROUND_COLOR_OPACITY
				Rectangle:
					pos: self.pos
					size: self.size

			size_hint: (1, None)
			size: (self.width, 70)
			padding: 10

			FDButton:
				size_hint: (None, None)
				size: (50, 50)
				on_press: root.manager.current = 'settings'

				Image:
					pos: self.parent.pos
					size: self.parent.size
					source: os_join(Config.IMAGES_DIR, 'back_button.png')

			FDTitleLabel:
				text: 'List'

			FDLabel:
				size_hint: (None, None)
				size: (50, 50)

		ScrollView:
			GridLayout:
				cols: 1
				do_scroll_x: False
				height: self.minimum_height
				size_hint: (1, None)
				padding: 10
				spacing: 10
				id: edit_list


<EditItem>
	size_hint: (1, None)
	size: (self.width, 70)
	color: Config.FONT_COLOR
	background_color: Config.BACKGROUND_COLOR_OPACITY
	text: self.view_text
	on_press:
		app.root.current = app.root.current[:-1]
		app.root.get_screen(app.root.current).update_screen(self.db_row.id)


<RadioField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 200)
	padding: 10
	spacing: 10

	FDTitleLabel:
		size_hint: (1, None)
		size: (self.width, 50)
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: f'{self.parent.title}:'


<RadioItem>
	canvas:
		Color:
			rgba: Config.BACKGROUND_COLOR_OPACITY
		Rectangle:
			pos: self.pos
			size: self.size

	spacing: 10

	CheckBox:
		size_hint: (None, 1)
		size: (50, self.height)
		halign: 'center'
		valign: 'middle'
		group: 'work_type'
		id: check_box

	FDLabel:
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: self.parent.title
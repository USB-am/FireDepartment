#:import Config config
#:import FDLabel,FDButton,FDErrorMessage UI.custom_widgets

<_FDErrorContent>
	orientation: 'vertical'
	padding: 10

	FDLabel:
		text_size: self.size
		valign: 'top'
		text: self.parent.error_message


<_FDColorInputContent>
	canvas:
		Color:
			rgba: Config.BACKGROUND_COLOR_OPACITY
		Rectangle:
			pos: self.pos
			size: self.size

	orientation: 'vertical'
	padding: 10

	ColorPicker:
		id: color_picker

	FDButton:
		size_hint: (1, None)
		size: (self.width, 70)
		text: 'Принять'
		id: accept_btn
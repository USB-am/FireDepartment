#:import os os
#:import Settings settings.settings

<CheckboxItem>:
	size_hint: 1, None
	size: self.width, 50

	MDCheckbox:
		size_hint: None, None
		size: 50, 50

	MDRectangleFlatIconButton:
		size_hint: 1, 1
		icon: 'account'
		text: 'text'
		line_color: 0, 0, 0, 0
		text_color: Settings.INVERTED_FONT_COLOR
		icon_color: Settings.INVERTED_FONT_COLOR
		id: show_info_button


<ForeignKeyField>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 400
	padding: [10, 0]
	spacing: 10

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50

		MDIcon:
			size_hint: None, None
			size: 50, 50
			icon: self.parent.parent.icon

		MDLabel:
			text: self.parent.parent.title

	ScrollView:
		GridLayout:
			cols: 1
			height: self.minimum_height
			size_hint: 1, None
			do_scroll_x: False
			spacing: 10
			id: foreign_key_container
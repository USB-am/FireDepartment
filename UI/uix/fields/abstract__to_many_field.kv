#:import os os
#:import Settings settings.settings


<TableInfoContent>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 500

	ScrollView:
		GridLayout:
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			spacing: 10
			id: table_info_list


<CheckboxItem>:
	size_hint: 1, None
	size: self.width, 50

	MDCheckbox:
		size_hint: None, None
		size: 50, 50
		group: self.parent.group
		id: checkbox

	MDTextButton:
		size_hint: 1, 1
		text: self.parent.text
		text_color: Settings.INVERTED_FONT_COLOR
		id: show_info_button


<_ToManyField>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 400
	padding: [10, 0]
	spacing: 10

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50

		MDIcon:
			size_hint: None, None
			size: 50, 50
			icon: self.parent.parent.icon

		MDLabel:
			text: self.parent.parent.title

	ScrollView:
		GridLayout:
			cols: 1
			height: self.minimum_height
			size_hint: 1, None
			do_scroll_x: False
			spacing: 10
			id: container
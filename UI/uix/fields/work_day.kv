#:import Settings settings.settings


<WorkDayField>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 100
	padding: [10, 0]

	MDBoxLayout:
		MDIcon:
			size_hint: None, None
			size: 50, 50
			icon: Settings.ICONS.get(self.parent.parent.title, '')

		MDLabel:
			size_hint: 1, None
			size: self.width, 50
			text: self.parent.parent.info_text

		MDLabel:
			size_hint: None, None
			size: 100, 50
			text: 'dd.mm.yyyy'

	MDRectangleFlatButton:
		size_hint: 1, None
		size: self.width, 50
		text: 'Open calendar'
		id: open_calendar_button
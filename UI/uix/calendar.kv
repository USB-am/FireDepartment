<Calendar>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 280)
	spacing: 10

	Label:
		size_hint: (1, None)
		size: (self.width, 30)
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: f'{self.parent.show_text}:'

	GridLayout:
		cols: 7
		size_hint: (1, None)
		height: self.minimum_height
		id: calendar_table
		spacing: 3

	BoxLayout:
		size_hint: (1, None)
		size: (self.width, 30)
		Label:
			size_hint: (.7, 1)
			text_size: self.size
			font_size: 16
			halign: 'left'
			valign: 'middle'
			text: 'Начало рабочего дня:'

		TextInput:
			size_hint: (.3, 1)
			multiline: False
			font_size: 16
			halign: 'right'
			text: '08:00'
			id: work_start_time


<CalendarDayButton>
	size_hint: (None, None)
	size: (30, 30)
	# background_color: (1, 0, 0, 1)
	text: self.show_text
	on_press: print(self.date.day)
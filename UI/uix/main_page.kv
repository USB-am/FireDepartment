#:import MDToolbar kivymd.uix.toolbar.MDToolbar


<SearchBlock@MDBoxLayout>
	size_hint: 1, None
	size: self.width, 70
	padding: 10
	spacing: 10

	MDTextField:
		hint_text: 'Поиск'
		halign: 'left'
		valign: 'middle'

	MDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'magnify'
		on_press:
			print('Search button is pressed')


<MainPage>
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			title: 'Menu'
			icon: 'fire-truck'
			left_action_items:
				[['fire-truck', lambda x: x, 'Home']]
			md_bg_color: (1, 1, 1, .5)
			specific_text_color: (0, 0, 0, 1)
			elevation: 10

		SearchBlock:
			id: search_text

		ScrollView:
			GridLayout:
				cols: 1
				size_hint: 1, None
				height: self.minimum_height
				do_scroll_x: False
				id: container


<PostItem>
	
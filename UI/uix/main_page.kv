#:import MDToolbar kivymd.uix.toolbar.MDToolbar


<SearchBlock@MDBoxLayout>
	size_hint: 1, None
	size: self.width, 70
	padding: 10
	spacing: 10

	MDTextField:
		hint_text: 'Поиск'
		halign: 'left'
		valign: 'middle'
		# text_color: Settings.FONT_COLOR

	MDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'magnify'
		on_press:
			print('Search button is pressed')


<MainPage>
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			title: 'Главная'
			left_action_items:
				[['fire-truck', lambda x: x, '']]
			right_action_items:
				[['cog', lambda x: self.parent.parent.move_to_settings(), 'Settings']]
			md_bg_color: Settings.BACKGROUND_COLOR_OPACITY
			specific_text_color: Settings.FONT_COLOR
			elevation: 10

		SearchBlock:
			id: search_text

		ScrollView:
			GridLayout:
				cols: 1
				size_hint: 1, None
				height: self.minimum_height
				do_scroll_x: False
				padding: [20, 0]
				spacing: 10
				id: container


<PostItem>
	size_hint: 1, None
	size: self.width, 50
	padding: [20, 0]

	MDLabel:
		text: 'Text'

	MDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'eye'
#:import FDLabel UI.custom_widgets

<StringField>
	size_hint: (1, None)
	size: (self.width, 50)
	padding: 10

	FDLabel:
		size_hint: (.3, 1)
		text: self.parent.title

	TextInput:
		size_hint: (.7, 1)
		multiline: False
		font_size: Config.FONT_SIZE
		padding_y: [self.height/2 - (self.line_height/2) * len(self._lines), 0]
		id: text_input


<PhoneField>
	size_hint: (1, None)
	size: (self.width, 50)
	padding: 10

	FDLabel:
		size_hint: (.3, 1)
		text: self.parent.title

	TextInput:
		size_hint: (.7, 1)
		multiline: False
		font_size: Config.FONT_SIZE
		padding_y: [self.height/2 - (self.line_height/2) * len(self._lines), 0]
		id: text_input


<CalendarField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 400)
	padding: 10
	spacing: 10

	GridLayout:
		cols: 7
		id: calendar_table
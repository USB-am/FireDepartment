#:import FDLabel,FDTitleLabel,FDButton UI.custom_widgets

<StringField>
	size_hint: (1, None)
	size: (self.width, 50)
	padding: 10

	FDLabel:
		size_hint: (.3, 1)
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: self.parent.view_text

	TextInput:
		size_hint: (.7, 1)
		multiline: False
		font_size: Config.FONT_SIZE
		padding_y: [self.height/2 - (self.line_height/2) * len(self._lines), 0]
		id: text_input


<TextField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 200)
	padding: 10

	FDTitleLabel:
		size_hint: (1, None)
		size: (self.width, 50)
		text_size: self.size
		text: f'{self.parent.view_text}:'

	TextInput:
		font_size: Config.FONT_SIZE
		id: text_input


<PhoneField>
	size_hint: (1, None)
	size: (self.width, 50)
	padding: 10

	FDLabel:
		size_hint: (.3, 1)
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: self.parent.view_text

	TextInput:
		size_hint: (.7, 1)
		multiline: False
		font_size: Config.FONT_SIZE
		padding_y: [self.height/2 - (self.line_height/2) * len(self._lines), 0]
		id: text_input


<RadioField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 200)
	padding: 10
	spacing: 10

	FDTitleLabel:
		size_hint: (1, None)
		size: (self.width, 50)
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: f'{self.parent.view_text}:'


<RadioItem>
	canvas:
		Color:
			rgba: Config.BACKGROUND_COLOR_OPACITY
		Rectangle:
			pos: self.pos
			size: self.size

	spacing: 10

	CheckBox:
		size_hint: (None, 1)
		size: (50, self.height)
		halign: 'center'
		valign: 'middle'
		group: 'work_type'
		id: check_box

	FDLabel:
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: self.parent.title


<CalendarField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 200)
	padding: 10
	spacing: 10

	GridLayout:
		cols: 7
		id: calendar_table


<CheckBoxItem>
	canvas:
		Color:
			rgba: Config.BACKGROUND_COLOR_OPACITY
		Rectangle:
			pos: self.pos
			size: self.size

	size_hint: (1, None)
	size: (self.width, 50)
	padding: 10
	spacing: 10

	CheckBox:
		size_hint: (None, None)
		size: (30, 30)
		id: check_box

	FDLabel:
		text_size: self.size
		halign: 'left'
		valign: 'middle'
		text: self.parent.title


<_ToManyField>
	orientation: 'vertical'
	size_hint: (1, None)
	size: (self.width, 400)
	padding: 10

	BoxLayout:
		size_hint: (1, None)
		size: (self.width, 50)
		padding: 10

		FDTitleLabel:
			text_size: self.size
			halign: 'left'
			valign: 'middle'
			text: f'{self.parent.parent.view_text}:'

		FDButton:
			size_hint: (None, None)
			size: (30, 30)
			text: '+'
			on_press:
				print(app.root.current)

	ScrollView:
		GridLayout:
			cols: 1
			size_hint: (1, None)
			height: self.minimum_height
			do_scroll_x: False
			padding: 10
			spacing: 10
			id: item_list
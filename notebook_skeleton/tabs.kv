<TopPanelTab>:
	size_hint: None, None
	size: dp(175), dp(50)
	orientation: 'horizontal'
	# md_bg_color: [.5, .5, .5, .3]

	MDFlatButton:
		id: open_btn
		text: root.title
		text_size: root.size
		size_hint: 1, 1

	MDIconButton:
		id: close_btn
		icon: 'close'
		size_hint: None, None
		size: dp(50), dp(50)


<TopPanel>:
	size_hint: 1, None
	height: dp(60)
	padding: [dp(5), dp(5)]
	md_bg_color: app.theme_cls.primary_color

	ScrollView:
		GridLayout:
			id: tabs_container
			rows: 1
			size_hint: None, 1
			width: self.minimum_width
			do_scroll_y: False
			spacing: dp(10), 0


<ContentPanel>:
	size_hint: 1, 1
	orientation: 'vertical'

	MDLabel:
		text: 'All good!'
		valign: 'center'
		halign: 'center'


<FDNotebook>:
	size_hint: 1, 1
	orientation: 'vertical'

	TopPanel:
		id: top_panel

	MDBoxLayout:
		orientation: 'vertical'
		padding: dp(10), 0

		ScrollView:
			GridLayout:
				id: content
				cols: 1
				size_hint: 1, None
				height: self.minimum_height
				do_scroll_x: False
				# padding: dp(10)
				spacing: dp(5)

				MDLabel:
					id: content_title
					size_hint: 1, None
					height: dp(70)
					font_style: 'H3'
					halign: 'center'
					text: 'Title'

				MDLabel:
					id: content_description
					size_hint: 1, None
					height: self.texture_size[1]
					text_size: self.width, None
					text: 'Description'
					font_style: 'H6'

				MDBoxLayout:
					id: subcontent
					adaptive_height: True
					orientation: 'vertical'
					padding: dp(5), 0

				MDTextField:
					id: addition_information
					multiline: True
					hint_text: 'Дополнительная информация'


<FDTripleCheckbox>:
	size_hint: 1, None
	height: dp(50)

	MDIconButton:
		size_hint: None, None
		size: dp(50), dp(50)
		icon: 'phone'

	MDLabel:
		size_hint: 1, None
		height: dp(50)
		text: root.title
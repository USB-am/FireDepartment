<TopPanelTab>:
	size_hint: None, None
	size: dp(175), dp(50)
	orientation: 'horizontal'

	MDFlatButton:
		id: open_btn
		text: root.title
		text_size: root.size
		size_hint: 1, 1

	MDIconButton:
		id: close_btn
		icon: 'close'
		size_hint: None, None
		size: dp(50), dp(50)


<TopPanel>:
	size_hint: 1, None
	height: dp(60)
	padding: [dp(5), dp(5)]
	md_bg_color: app.theme_cls.primary_color

	ScrollView:
		GridLayout:
			id: tabs_container
			rows: 1
			size_hint: None, 1
			width: self.minimum_width
			do_scroll_y: False
			spacing: dp(10), 0


<ContentPanel>:
	size_hint: 1, 1
	orientation: 'vertical'

	MDLabel:
		text: 'All good!'
		valign: 'center'
		halign: 'center'


<FDNotebook>:
	size_hint: 1, 1
	orientation: 'vertical'

	TopPanel:
		id: top_panel

	MDBoxLayout:
		id: content
		orientation: 'vertical'

		MDLabel:
			id: text_content
			text: ''
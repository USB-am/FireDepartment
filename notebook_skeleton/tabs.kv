<FDNoteBook>:
	orientation: 'vertical'
	size_hint: 1, 1

	NoteBookTopPanel:
		size_hint: 1, None
		height: dp(50)

	NoteBookContent:
		size_hint: 1, 1


<NoteBookTopPanel>:
	md_bg_color: [0, 0, 1, 1]

	ScrollView:
		GridLayout:
			id: top_bar
			rows: 1
			size_hint: None, 1
			width: self.minimum_width
			do_scroll_y: False
			padding: [dp(10), 0]
			spacing: [dp(15), 0]


<TopPanelTab>:
	size_hint: None, 1
	width: dp(175)
	md_bg_color: app.theme_cls.accent_palette

	MDTextButton:
		id: open_btn
		size_hint: 1, 1
		valign: 'center'
		text: root.title
		theme_text_color: 'Custom'
		text_color: (1, 1, 1, 1)
		text_size: self.size

	MDIconButton:
		id: close_btn
		icon: 'close'
		theme_text_color: 'Custom'
		text_color: (1, 1, 1, 1)


<NoteBookContent>:
	ScrollView:
		GridLayout:
			id: content
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: dp(10)
			spacing: dp(15)

			MDLabel:
				id: tab_title
				size_hint: 1, None
				height: dp(60)
				text: 'Tab title'
				halign: 'center'
				font_style: 'H3'

			MDLabel:
				id: description
				size_hint: 1, None
				height: self.texture_size[1]
				text_size: self.width, None
				text: 'Tab description'*10
				font_style: 'H6'
#:import FDIcon,FDLabel app.tools.custom_widgets.label
#:import FDIconButton app.tools.custom_widgets.button


<DialogElement>:
	size_hint: 1, None
	size: self.width, 50

	MDLabel:
		size_hint: .3, 1
		text: root.title + ': '

	MDLabel:
		size_hint: .7, 1
		text: str(root.value)


<DialogContent>:
	orientation: 'vertical'
	size_hint: .8, .8


<ElementToManyField>:
	size_hint: 1, None
	size: self.width, 50

	MDCheckbox:
		id: checkbox
		size_hint: None, None
		size: 50, 50
		selected_color: app.theme_cls.accent_color
		group: root.group

	MDTextButton:
		id: btn
		size_hint: 1, 1
		text: root.display_text
		on_release:
			# print(f'{root.display_text} is pressed')
			root.show_display_info()


<AbstractToManyField>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 400

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50

		FDIcon:
			size_hint: None, None
			size: 50, 50
			icon: root.icon

		FDLabel:
			text: root.display_text

		FDIconButton:
			size_hint: None, None
			size: 50, 50
			icon: 'folder-multiple-plus'
			on_release:
				app.forward(root.to_create_screen)

	ScrollView:
		GridLayout:
			id: content
			cols: 1
			height: self.minimum_height
			size_hint: 1, None
			do_scroll_x: False
			padding: [10, 0]
			spacing: 10

			FDLabel:
				size_hint: 1, None
				size: self.width, 350
				text: '[ Пусто ]'
				halign: 'center'
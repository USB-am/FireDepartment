<DateTimeField>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 100

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50

		MDIcon:
			size_hint: None, None
			size: 50, 50
			icon: self.parent.parent.icon

		MDLabel:
			size_hint: .5, 1
			text: self.parent.parent.display_text

		MDLabel:
			id: fill_data
			size_hint: .5, 1
			halign: 'right'
			text: 'dd.mm.yyyy\nHH:MM:SS'

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50
		padding: [10, 0]
		spacing: 20

		MDRaisedButton:
			id: date_button
			text: 'dd.mm.yyyy'

		MDRaisedButton:
			id: time_button
			text: 'HH:MM:SS'
<MainScreenListElement>:
	style: 'elevated'
	padding: dp(5)
	size_hint: (1, None)
	height: dp(100)

	MDRelativeLayout:
		MDIconButton:
			icon: 'dots-vertical'
			pos_hint: {'top': 1, 'right': 1}

		MDLabel:
			text: root.text
			adaptive_size: True
			color: 'grey'
			bold: True
			pos: (dp(12), dp(12))


<MainScreenInfoElement>:
	orientation: 'vertical'
	size_hint: (1, None)
	height: dp(150)

	MDLabel:
		id: title_lbl
		valign: 'top'
		halign: 'left'
		text: root.title

	MDLabel:
		id: description_lbl
		valign: 'top'
		halign: 'left'
		text: root.description

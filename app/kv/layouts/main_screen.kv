#:import NUMBER_FONT config.NUMBER_FONT


<MainScreenListElement>:
	style: 'elevated'
	padding: dp(5)
	size_hint: (1, None)
	height: dp(100)

	MDRelativeLayout:
		MDLabel:
			id: fd_number
			size_hint: (1, 1)
			pos_hint: {'right': 1, 'center_y': .5}
			text: str(root.fd_number)
			halign: 'right'
			valign: 'center'
			color: '#dedede'
			font_name: str(NUMBER_FONT)
			font_size: dp(100)

		MDLabel:
			id: title_lbl
			size_hint: (.7, .15)
			pos_hint: {'x': .025, 'top': .975}
			text: root.title
			color: 'grey'
			bold: True

		MDLabel:
			id: description_lbl
			size_hint: (.7, .75)
			pos_hint: {'x': .025, 'top': .8}
			text: root.description
			valign: 'top'
			color: 'grey'
			text_size: self.size


<MainScreenInfoElement>:
	orientation: 'vertical'
	size_hint: (1, None)
	height: dp(150)

	MDLabel:
		id: title_lbl
		valign: 'top'
		halign: 'left'
		text: root.title

	MDLabel:
		id: description_lbl
		valign: 'top'
		halign: 'left'
		text: root.description

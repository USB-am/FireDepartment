<MainScreenListElement>:
	style: 'elevated'
	padding: dp(5)
	size_hint: (1, None)
	height: dp(100)

	MDBoxLayout:
		orientation: 'vertical'
		padding: [0, dp(15)]

		MDLabel:
			id: title_lbl
			size_hint: (1, None)
			height: dp(15)
			text: root.title
			color: 'grey'
			bold: True

		MDLabel:
			id: description_lbl
			size_hint: (1, None)
			height: dp(55)
			text: root.description
			color: 'grey'


<MainScreenInfoElement>:
	orientation: 'vertical'
	size_hint: (1, None)
	height: dp(150)

	MDLabel:
		id: title_lbl
		valign: 'top'
		halign: 'left'
		text: root.title

	MDLabel:
		id: description_lbl
		valign: 'top'
		halign: 'left'
		text: root.description

<MainScreenListElement>:
	orientation: 'horizontal'
	size_hint: (1, None)
	height: dp(50)

	MDIcon:
		size_hint: (None, 1)
		width: dp(50)
		icon: root.icon

	MDBoxLayout:
		orientation: 'vertical'
		size_hint: (1, None)
		height: dp(50)

		MDLabel:
			size_hint: (1, None)
			height: dp(25)
			bold: True
			text: root.emergency.title

		MDLabel:
			size_hint: (1, None)
			height: dp(25)
			text: root.emergency.description if root.emergency.description else ''


<MainScreenInfoElement>:
	orientation: 'vertical'
	size_hint: (1, None)
	height: dp(150)

	MDLabel:
		id: title_lbl
		valign: 'top'
		halign: 'left'
		text: root.title

	MDLabel:
		id: description_lbl
		valign: 'top'
		halign: 'left'
		text: root.description

<SelectedList>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 400

	MDBoxLayout:
		id: top_panel
		size_hint: 1, None
		size: self.width, 50

		MDIcon:
			size_hint: None, 1
			size: 50, self.height
			icon: root.icon

		MDLabel:
			text: root.display_title

	ScrollView:
		GridLayout:
			id: content
			cols: 1
			height: self.minimum_height
			size_hint: 1, None
			do_scroll_x: False
			padding: 10


<ListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDCheckbox:
		id: checkbox
		size_hint: None, None
		size: 50, 50
		group: root.group

	MDFlatButton:
		size_hint: 1, None
		size: self.width, 50
		text: root.display_title
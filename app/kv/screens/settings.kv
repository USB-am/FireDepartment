<DataBaseElement>:
	size_hint: 1, None
	size: self.width, 50
	padding: [30, 10]
	spacing: 20

	MDRectangleFlatIconButton:
		icon: 'plus-circle'
		text: 'Создать'
		on_press:
			app.forward(self.parent.to_create_screen_name)

	MDRectangleFlatIconButton:
		icon: 'playlist-edit'
		text: 'Изменить'
		on_press:
			app.forward(self.parent.to_edit_screen_name)


<Settings>:
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			id: toolbar
			left_action_items: [['arrow-left', lambda x: app.back(), '']]
			right_action_items: [['head-question', lambda x: print(x), 'Help']]
			elevation: 10

		ScrollView:
			GridLayout:
				id: content
				cols: 1
				do_scroll_x: False
				size_hint: 1, None
				height: self.minimum_height
				padding: 10
				spacing: 10
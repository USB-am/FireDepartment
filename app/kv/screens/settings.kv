<ColorThemeElement>:
	size_hint: 1, None
	size: self.width, 60
	padding: [20, 10]

	MDRectangleFlatIconButton:
		icon: root.icon
		text: root.display_text
		md_bg_color: (0, 0, 0, 0)
		line_color: (0, 0, 0, 0)
		text_color: app.theme_cls.text_color
		icon_color: app.theme_cls.text_color
		on_release:
			app.forward('update_color_theme')


<CreateUpdateIconButton@MDRectangleFlatIconButton>:
	text_color: app.theme_cls.accent_color
	line_color: app.theme_cls.accent_color
	icon_color: app.theme_cls.accent_color


<DataBaseElement>:
	size_hint: 1, None
	size: self.width, 50
	padding: [30, 10]
	spacing: 20

	CreateUpdateIconButton:
		icon: 'plus-circle'
		text: 'Создать'	# TODO: Change to LOCALIZED.translate method
		on_release:
			app.forward(root.to_create_screen_name)

	CreateUpdateIconButton:
		icon: 'playlist-edit'
		text: 'Изменить'	# TODO: Change to LOCALIZED.translate method
		on_release:
			app.forward(root.to_edit_screen_name)


<Options>:
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			id: toolbar
			left_action_items: [['arrow-left', lambda x: app.back(), '']]
			right_action_items: [['head-question', lambda x: print(x), 'Help']]
			elevation: 10

		ScrollView:
			GridLayout:
				id: content
				cols: 1
				do_scroll_x: False
				size_hint: 1, None
				height: self.minimum_height
				padding: 10
				spacing: 10
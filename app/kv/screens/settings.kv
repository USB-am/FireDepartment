#:import randint random

<ColorThemeElement>:
	size_hint: 1, None
	size: self.width, 60
	padding: [20, 10]

	MDRectangleFlatIconButton:
		size_hint: 1, None
		size: self.width, 50
		icon: 'palette'
		text: 'ColorThemeElement'
		line_color: (0, 0, 0, 0)
		on_release:
			app.forward('update_color_theme')


<DataBaseElement>:
	size_hint: 1, None
	size: self.width, 50
	padding: [30, 10]
	spacing: 20

	MDRectangleFlatIconButton:
		icon: 'plus-circle'
		text: 'Создать'	# TODO: Change to LOCALIZED.translate method
		on_release:
			app.forward(root.to_create_screen_name)

	MDRectangleFlatIconButton:
		icon: 'playlist-edit'
		text: 'Изменить'	# TODO: Change to LOCALIZED.translate method
		on_release:
			app.forward(root.to_edit_screen_name)


<Settings>:
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			id: toolbar
			left_action_items: [['arrow-left', lambda x: app.back(), '']]
			right_action_items: [['head-question', lambda x: print(x), 'Help']]
			elevation: 10

		ScrollView:
			GridLayout:
				id: content
				cols: 1
				do_scroll_x: False
				size_hint: 1, None
				height: self.minimum_height
				padding: 10
				spacing: 10
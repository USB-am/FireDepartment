#:import FDLabel app.tools.custom_widgets.label
#:import FDIconButton app.tools.custom_widgets.button
#:import SearchBlock app.tools.fields.search_block


<EmergencyElement>:
	size_hint: 1, None
	size: self.width, 50
	padding: [30, 0]

	FDLabel:
		text: 'Text'

	FDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'eye'
		on_release:
			print('Open')


<MainPage>:
	MDBoxLayout:
		orientation: 'vertical'

		MDToolbar:
			id: toolbar
			left_action_items: [['fire-truck', lambda x: print(x), '']]
			right_action_items: [['cog', lambda x: app.forward('settings'), '']]
			elevation: 10

		SearchBlock:
			id: search_block
			size_hint: 1, None
			size: self.width, 50
			padding: [10, 0]

		ScrollView:
			GridLayout:
				id: content
				cols: 1
				do_scroll_x: False
				size_hint: 1, None
				height: self.minimum_height
				padding: 10
				spacing: 10
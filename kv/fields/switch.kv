<FDSwitch>:
	orientation: 'horizontal'
	size_hint: (1, None)
	height: dp(50)
	padding: [0, 0, dp(10), 0]

	MDIcon:
		id: icon
		size_hint: (None, None)
		size: (dp(25), dp(50))
		icon: root.icon

	MDLabel:
		id: title
		text: root.title

	MDSwitch:
		id: switch


<FDDoubleSwitch>:
	orientation: 'horizontal'
	size_hint: (1, None)
	height: dp(50)
	padding: [0, 0, dp(10), 0]

	MDIcon:
		id: icon
		size_hint: (None, None)
		size: (dp(25), dp(50))
		icon: root.icon_deactive

	MDLabel:
		id: title
		text: root.title_deactive

	MDSwitch:
		id: switch

		on_release:
			root._pressed_to_switch()
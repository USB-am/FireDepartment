<_SelectListItem>:
	size_hint: 1, None
	height: dp(50)

	MDCheckbox:
		size_hint: None, None
		size: dp(50), dp(50)
		text_size: self.size
		valign: 'bottom'

	MDTextButton:
		size_hint: 1, None
		height: dp(50)
		text: root.db_entry.title
		text_size: self.size
		halign: 'left'

		on_release:
			print(f'You pressed on "{root.db_entry.title}"')


<FDSelectList>:
	orientation: 'vertical'
	size_hint: 1, None
	height: dp(400)
	md_bg_color: app.theme_cls.accent_color

	MDBoxLayout:
		size_hint: 1, None
		height: dp(50)
		padding: dp(10), 0

		MDIcon:
			icon: root.icon
			size_hint: None, 1
			width: dp(50)

		MDLabel:
			text: root.title

	ScrollView:
		GridLayout:
			id: lst
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: dp(15), dp(5)
			spacing: dp(10)
<_SelectListItem>:
	size_hint: 1, None
	height: dp(50)

	MDCheckbox:
		id: checkbox
		size_hint: None, 1
		size: self.height, self.height
		group: root.group

	MDFlatButton:
		id: btn
		size_hint: None, None
		size: root.size
		text_size: root.size
		text: root.db_entry.title
		anchor_x: 'left'

		on_release:
			root.open_dialog()


<FDSelectList>:
	orientation: 'vertical'
	size_hint: 1, None
	height: dp(400)

	MDBoxLayout:
		size_hint: 1, None
		height: dp(50)
		padding: dp(10), 0

		MDIcon:
			icon: root.icon
			size_hint: None, 1
			width: dp(50)

		MDLabel:
			text: root.title

		AnchorLayout:
			id: btn_layout
			anchor_x: 'right'
			anchor_y: 'center'

	ScrollView:
		GridLayout:
			id: lst
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: dp(15), dp(5)
			spacing: dp(10)
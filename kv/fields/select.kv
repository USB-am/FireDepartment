<_BaseSelect>:
	orientation: 'vertical'
	size_hint_y: None
	height: dp(400)

	MDBoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: dp(50)

		MDIcon:
			size_hint: (None, None)
			size: (dp(25), dp(50))
			icon: root.model.icon

		MDLabel:
			text: root.title

		MDIconButton:
			id: add_btn
			size_hint: (None, None)
			size: (dp(50), dp(50))
			icon: 'plus'

	ScrollView:
		GridLayout:
			id: content
			cols: 1
			size_hint: (1, None)
			height: self.minimum_height
			do_scroll_x: False
			padding: [dp(10), dp(15)]


<_BaseRecycleSelect>:
	orientation: 'vertical'
	size_hint_y: None
	height: dp(400)

	MDBoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: dp(50)

		MDIcon:
			size_hint: (None, None)
			size: (dp(25), dp(50))
			icon: root.model.icon

		MDLabel:
			text: root.title

		MDIconButton:
			id: add_btn
			size_hint: (None, None)
			size: (dp(50), dp(50))
			icon: 'plus'

	_FDSelectRecycleView:
		id: recycle_view


<_FDSelectRecycleView>:
	viewclass: 'FDSelectElement'

	SelectableRecycleBoxLayout:
		default_size: None, dp(50)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'


<FDSelectElement>:
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(50)
	active: checkbox.active

	MDCheckbox:
		id: checkbox
		active: root.active
		group: root.group
		size_hint: (None, None)
		size: (dp(50), dp(50))
		on_release: root.store_checkbox_state()

	MDTextButton:
		id: info_btn
		size_hint: (1, 1)
		theme_text_color: 'Custom'
		text_color: app.theme_cls.text_color
		halign: 'left'
		valign: 'center'
		text: root.text
		on_release: root.open_dialog()

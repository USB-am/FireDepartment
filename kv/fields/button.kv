<FDButton>:
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(40)

	MDIcon:
		size_hint_x: None
		width: dp(25)
		icon: root.icon

	MDLabel:
		id: title_label
		text: root.title

	MDRaisedButton:
		id: btn
		size_hint_x: None
		width: dp(75)
		md_bg_color: app.theme_cls.primary_color
		text: root.btn_text


<FDDoubleButton>:
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(40)
	spacing: dp(3)

	MDLabel:
		id: title_label
		theme_text_color: 'Hint'
		text: root.title

	MDRectangleFlatButton:
		id: btn1
		size_hint_x: None
		width: dp(75)
		md_bg_color: app.theme_cls.primary_color
		text: root.btn1_text

	MDRectangleFlatButton:
		id: btn2
		size_hint_x: None
		width: dp(75)
		md_bg_color: app.theme_cls.primary_color
		text: root.btn2_text


<FDIconButton>:
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(40)

	MDIcon:
		size_hint_x: None
		width: dp(25)
		icon: root.icon

	MDLabel:
		id: title_label
		text: root.title

	MDIconButton:
		id: btn
		size_hint_x: None
		width: dp(50)
		icon: root.icon_btn


<FDRectangleButton>:
	# orientation: 'horizontal'
	anchor_x: 'center'
	anchor_y: 'center'
	size_hint_y: None
	height: dp(70)
	padding: [0, dp(10)]

	MDRectangleFlatButton:
		id: btn
		size_hint_x: None
		width: int(root.width * .75)
		text: root.title
<FDDate>:
	orientation: 'horizontal'
	size_hint: 1, None
	height: dp(50)

	MDIcon:
		icon: root.icon
		size_hint: None, 1
		width: self.height

	MDLabel:
		text: root.title

	MDRaisedButton:
		id: btn
		size_hint: None, 1
		width: self.height * 2
		text: 'dd.mm.yyyy'

		on_release:
			root._open_date_dialog()


<FDDateTime>:
	orientation: 'vertical'
	size_hint: 1, None
	height: dp(100)

	MDBoxLayout:
		orientation: 'horizontal'
		size_hint: 1, None
		height: dp(50)

		MDIcon:
			icon: root.icon
			size_hint: None, 1
			width: self.height

		MDLabel:
			text: root.title

	MDBoxLayout:
		orientation: 'horizontal'
		size_hint: 1, None
		height: dp(50)

		MDLabel:
			id: value_text
			size_hint: 1, 1
			text_size: self.size
			valign: 'center'
			theme_text_color: 'Hint'
			text: 'dd.mm.yyyy HH:MM:SS'

		MDIconButton:
			id: date_btn
			theme_text_color: 'Custom'
			icon: 'calendar-month'

			on_release:
				root._open_date_dialog()

		MDIconButton:
			id: time_btn
			theme_text_color: 'Custom'
			icon: 'clock-outline'

			on_release:
				root._open_time_dialog()
<FDInput>:
	size_hint_y: None
	height: dp(50)

	MDTextField:
		hint_text: root.hint_text
		helper_text: root.help_text
		helper_text_mode: "on_focus"


<FDLeftIconInput>:
	size_hint_y: None
	height: dp(50)

	MDIcon:
		size_hint: None, None
		size: dp(50), dp(50)
		icon: root.icon

	MDTextField:
		hint_text: root.hint_text
		helper_text: root.help_text
		helper_text_mode: "on_focus"


<FDRightIconInput>:
	size_hint_y: None
	height: dp(50)

	MDTextField:
		hint_text: root.hint_text
		helper_text: root.help_text
		helper_text_mode: "on_focus"

	MDIcon:
		size_hint: None, None
		size: dp(50), dp(50)
		icon: root.icon

<FDCalendarWeekTitle>:
	size_hint: None, None
	size: dp(20), dp(20)
	halign: 'center'
	valign: 'center'
	font_style: 'Body2'
	bold: True
	text: root.text


<FDCalendarDay>:
	size_hint: None, None
	size: dp(20), dp(20)
	radius: dp(10)
	halign: 'center'
	valign: 'center'
	font_style: 'Body2'
	text: root.date.strftime('%d')


<FDCalendar>:
	orientation: 'horizontal'
	size_hint_y: None
	height: dp(195)

	MDBoxLayout:
		id: calendar
		orientation: 'vertical'
		size_hint_x: None
		width: dp(170)

		MDBoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: dp(25)

			MDIconButton:
				id: prev_month_btn
				size_hint: None, None
				width: dp(25)
				height: dp(25)
				pos_hint: {'center_y': .5}
				icon: 'menu-left'

				on_release:
					root.prev_month()

			MDLabel:
				id: month_title_label
				halign: 'center'
				valign: 'center'
				text: root.month_title

			MDIconButton:
				id: next_month_btn
				size_hint: None, None
				width: dp(25)
				height: dp(25)
				pos_hint: {'center_y': .5}
				icon: 'menu-right'

				on_release:
					root.next_month()

		MDGridLayout:
			id: week_days_layout
			size_hint_y: None
			height: dp(20)
			cols: 7
			spacing: dp(5)

			FDCalendarWeekTitle:
				text: 'ПН'

			FDCalendarWeekTitle:
				text: 'ВТ'

			FDCalendarWeekTitle:
				text: 'СР'

			FDCalendarWeekTitle:
				text: 'ЧТ'

			FDCalendarWeekTitle:
				text: 'ПТ'

			FDCalendarWeekTitle:
				text: 'СБ'

			FDCalendarWeekTitle:
				text: 'ВС'

		MDGridLayout:
			id: calendar_layout
			cols: 7
			spacing: dp(5)

	MDBoxLayout:
		orientation: 'vertical'
		padding: [dp(15), 0, 0, 0]

		MDIcon:
			size_hint: None, None
			size: dp(50), dp(50)
			icon: root.icon

		MDLabel:
			id: next_work_day_label
			size_hint: None, None
			size: dp(50), dp(50)

<FDCalendar>:
	orientation: 'horizontal'
	size_hint: (1, None)
	height: dp(270)
	# padding: [0, dp(10)]

	MDBoxLayout:
		# Left padding layout

	MDBoxLayout:
		# Calendar layout
		orientation: 'vertical'
		size_hint: (None, None)
		size: (root.height - dp(6), root.height - dp(6))
		padding: (dp(2), dp(2))
		md_bg_color: app.theme_cls.primary_color[:-1] + [.1]

		MDBoxLayout:
			orientation: 'vertical'
			size_hint: (None, None)
			size: (root.height - dp(10), root.height - dp(10))
			md_bg_color: app.theme_cls.opposite_text_color

			MDBoxLayout:
				# Navigation panel
				orientation: 'horizontal'
				size_hint: (1, None)
				height: dp(50)

				MDIconButton:
					icon: 'menu-left'
					size_hint: (None, None)
					size: (dp(50), dp(50))

					on_release:
						root.move_to_prev_month()

				MDLabel:
					id: month_title
					text: '???'
					halign: 'center'

				MDIconButton:
					icon: 'menu-right'
					size_hint: (None, None)
					size: (dp(50), dp(50))

					on_release:
						root.move_to_next_month()

			MDGridLayout:
				# Week day titles
				size_hint: (1, None)
				height: dp(10)
				cols: 7
				padding: [0, 0, 0, dp(5)]

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'ПН'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'ВТ'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'СР'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'ЧТ'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'ПТ'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'СБ'
					halign: 'center'

				MDLabel:
					theme_text_color: 'Custom'
					text_color: app.theme_cls.text_color[:-1] + [.8]
					font_style: 'Overline'
					text: 'ВС'
					halign: 'center'

			MDGridLayout:
				# Calenar grid
				id: calendar_grid
				cols: 7

	MDBoxLayout:
		# Right padding layout


<_CalendarGridDay>:
	text: str(root.date.day) if root.date.day >= 10 else '0' + str(root.date.day)
	halign: 'center'
	theme_text_color: 'Primary' if root.this_month else 'Hint'

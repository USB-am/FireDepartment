<FDCalendar>:
	orientation: 'horizontal'
	# adaptive_height: True
	size_hint_y: None
	height: dp(145)

	MDBoxLayout:
		orientation: 'vertical'

		MDIcon:
			size_hint: None, None
			size: dp(50), dp(50)
			icon: root.icon

		MDLabel:
			id: next_work_day_label
			size_hint: None, None
			size: dp(50), dp(50)

	MDBoxLayout:
		id: calendar
		orientation: 'vertical'
		size_hint_x: None
		width: dp(170)

		MDBoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: dp(25)

			MDIconButton:
				id: prev_month_btn
				size_hint: None, None
				width: dp(25)
				height: dp(25)
				pos_hint: {'center_y': .5}
				icon: 'menu-left'

			MDLabel:
				id: month_title_label
				halign: 'center'
				valign: 'center'
				text: 'Декабрь'

			MDIconButton:
				id: next_month_btn
				size_hint: None, None
				width: dp(25)
				height: dp(25)
				pos_hint: {'center_y': .5}
				icon: 'menu-right'

		MDGridLayout:
			id: calendar_layout
			md_bg_color: (0, 0, 1, .3)
			cols: 7
			spacing: dp(5)

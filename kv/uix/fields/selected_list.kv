<SelectedListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDCheckbox:
		id: checkbox
		size_hint: None, 1
		size: self.height, self.height
		group: root.group

	MDFlatButton:
		id: button
		size_hint: None, 1
		size: int(root.width - self.height), self.height
		# text_size: self.size
		anchor_x: 'left'
		text: root.db_entry.title
		text_color: 0, 0, 0, 1


<SelectedList>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 400

	MDBoxLayout:
		id: toolbar
		size_hint: 1, None
		size: self.width, 50

		MDIcon:
			size_hint: None, 1
			size: self.height, self.height
			icon: root.icon

		MDLabel:
			text: root.display_text

		MDIconButton:
			id: redirect_button
			size_hint: None, None
			size: 50, 50
			icon: 'plus'

	ScrollView:
		padding: 10

		GridLayout:
			id: elements
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			spacing: 10
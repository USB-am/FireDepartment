#:import TripleCheckbox uix.fields.triple_checkbox

<FDEmergencyTab>:
	ScrollView:
		GridLayout:
			id: scroll_layout
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: 15, 0
			spacing: 10

			MDBoxLayout:
				size_hint: 1, None
				size: self.width, 75

				MDIcon:
					size_hint: None, 1
					size: 50, self.height
					icon: 'form-textbox'

				MDLabel:
					text: root.title
					halign: 'left'


<HumansSelectedListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		id: checkbox_container
		size_hint: None, 1
		size: 50, self.height

	MDExpansionPanelTwoLine:
		id: expansion_panel
		size_hint: 1, 1
		text: root.human.title
		secondary_text: root.phone_1
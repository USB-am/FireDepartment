#:import TripleCheckbox uix.fields.triple_checkbox


<FDEmptyTab>:
	MDLabel:
		size_hint: 1, 1
		markup: True
		text: root.display_text
		halign: 'center'
		valign: 'center'


<FDEmergencyTab>:
	ScrollView:
		GridLayout:
			id: scroll_layout
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: 15, 0
			spacing: 10

			MDBoxLayout:
				size_hint: 1, None
				size: self.width, 75

				MDIcon:
					size_hint: None, 1
					size: 50, self.height
					icon: 'form-textbox'

				MDLabel:
					text: root.title
					halign: 'left'


<HumansSelectedListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		id: checkbox_container
		size_hint: None, 1
		size: 50, self.height

	# MDExpansionPanelTwoLine:
	MDFlatButton:
		id: expansion_panel
		size_hint: 1, 1
		text_size: self.size
		text: f'[b]{root.human.title}[/b]\n[i]{root.phone_1}[/i]'
		anchor_x: 'left'
		padding: [10, 0]
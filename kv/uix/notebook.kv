#:import TripleCheckbox uix.fields.triple_checkbox
#:import DescriptionField uix.fields.text_fields


<FDEmptyTab>:
	MDLabel:
		size_hint: 1, 1
		markup: True
		text: root.display_text
		halign: 'center'
		valign: 'center'


<DropupLayout>:
	orientation: 'vertical'
	size_hint: 1, None
	size: self.width, 50
	md_bg_color: 1, 1, 1, .5

	MDBoxLayout:
		size_hint: 1, None
		size: self.width, 50
		md_bg_color: 0, 0, 0, .2

		MDLabel:
			size_hint: 1, 1
			text: root.display_text

		MDIconButton:
			id: button
			size_hint: None, None
			size: 50, 50
			icon: 'chevron-up'


<HumansSelectedListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		id: checkbox_container
		size_hint: None, 1
		size: 50, self.height

	MDFlatButton:
		id: expansion_panel
		size_hint: 1, 1
		text_size: self.size
		text: f'[b]{root.human.title}[/b]\n[i]{root.phone_1}[/i]'
		anchor_x: 'left'
		padding: [10, 0]
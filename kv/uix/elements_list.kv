<ExpansionEmergencyElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		id: emergency_elements

	MDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'eye'

		on_release:
			print(f'Open {root.element.title}')


<ExpansionOptionsElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		MDRectangleFlatIconButton:
			id: create_button
			icon: 'playlist-plus'
			text: root.create_text

			on_release:
				print('Create button is pressed')

	MDBoxLayout:
		MDRectangleFlatIconButton:
			id: edit_button
			icon: 'playlist-edit'
			text: root.edit_text

			on_release:
				print('Edit button is pressed')


<EmergencyContentElement>:
	MDIcon:
		size_hint: None, None
		size: 50, 50
		icon: root.icon

	MDLabel:
		text: str(root.value)
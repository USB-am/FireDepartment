<ExpansionEmergencyElement>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		id: emergency_elements

	MDIconButton:
		size_hint: None, None
		size: 50, 50
		icon: 'eye'

		on_release:
			app.screen_manager.current = 'current_calls'
			app.screen_manager.current_screen.add_tab(root.element)


<ExpansionOptionsElement>:
	size_hint: 1, None
	size: self.width, 50

	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'bottom'

		MDRectangleFlatIconButton:
			id: create_button
			icon: 'playlist-plus'
			text: root.create_text

	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'bottom'

		MDRectangleFlatIconButton:
			id: edit_button
			icon: 'playlist-edit'
			text: root.edit_text


<ExpansionOptionsColorTheme>:
	size_hint: 1, None
	size: self.width, 50

	MDBoxLayout:
		MDRectangleFlatIconButton:
			id: button
			icon: 'playlist-edit'
			text: root.display_text


<ExpansionEditListElement>:
	size_hint: 1, None
	size: self.width, 50

	MDRectangleFlatIconButton:
		id: button
		size_hint: None, 1
		size: root.width, self.height
		icon: root.element.icon
		text: root.element.title
		text_color: root.text_color
		icon_color: root.text_color
		line_color: 0, 0, 0, 0

		on_release:
			print('Color is', app.theme_cls.theme_style)


<EmergencyContentElement>:
	MDIcon:
		size_hint: None, None
		size: 50, 50
		icon: root.icon

	MDLabel:
		text: str(root.value)
<FDNotebook>:
	orientation: 'vertical'
	size_hint: 1, 1

	MDBoxLayout:
		id: navigation
		size_hint_y: None
		height: dp(50)
		md_bg_color: app.theme_cls.primary_color

	MDBoxLayout:
		id: content
		orientation: 'vertical'


<_FDTabWidget>:
	size_hint: None, None
	width: dp(175)
	height: dp(50)

	MDFlatButton:
		id: open_button
		size_hint: 1, None
		height: dp(50)
		# text_size: self.size
		text: root.title

	MDIconButton:
		id: close_button
		size_hint: None, None
		size: dp(50), dp(50)
		icon: 'close'
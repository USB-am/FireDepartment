<FDTopBarTab>:
	orientation: 'horizontal'
	size_hint: None, 1
	width: dp(150)
	# md_bg_color: (0, 0, 0, .2)

	MDTextButton:
		id: open_btn
		size_hint: 1, 1
		valign: 'center'
		text: root.title
		theme_text_color: 'Custom'
		text_color: (1, 1, 1, 1)
		text_size: self.size

		on_release:
			print('Open tab button is pressed')

	MDIconButton:
		id: close_btn
		icon: 'close'
		theme_text_color: 'Custom'
		text_color: (1, 1, 1, 1)

		on_release:
			print('Close tab button is pressed')


<FDNotebook>:
	orientation: 'vertical'
	size_hint: 1, 1

	MDBoxLayout:
		size_hint: 1, None
		height: dp(50)
		md_bg_color: app.theme_cls.primary_color

		ScrollView:
			GridLayout:
				id: top_bar
				rows: 1
				size_hint: None, 1
				width: self.minimum_width
				do_scroll_y: False
				padding: [dp(10), 0]
				spacing: [dp(15), 0]

	ScrollView:
		GridLayout:
			cols: 1
			size_hint: 1, None
			height: self.minimum_height
			do_scroll_x: False
			padding: dp(10)

			MDBoxLayout:
				id: contacts_container
				adaptive_height: True

			MDBoxLayout:
				id: text_container
				adaptive_height: True
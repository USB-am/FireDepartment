<FDNotebook>:
	orientation: 'vertical'
	size_hint: (1, 1)

	MDBoxLayout:
		size_hint: (1, None)
		height: dp(50)
		md_bg_color: app.theme_cls.accent_color

		ScrollView:
			MDBoxLayout:
				id: tab_panel
				orientation: 'horizontal'
				size_hint: (None, 1)
				width: self.minimum_width
				do_scroll_y: False
				padding: [dp(5), 0]
				spacing: dp(10)

	MDBottomNavigation:
		id: bottom_nav
		panel_color: app.theme_cls.accent_color

		MDBottomNavigationItem:
			name: 'phones'
			text: 'Звонки'
			icon: 'phone'

			ScrollView:
				size_hint: (1, 1)

				GridLayout:
					id: phone_content
					cols: 1
					size_hint: (1, None)
					height: self.minimum_height
					do_scroll_x: False
					padding: [dp(10), dp(20)]

					MDLabel:
						text: 'Phones #1'
						size_hint_y: None
						height: dp(50)

		MDBottomNavigationItem:
			name: 'info'
			text: 'Информация'
			icon: 'notebook'

			ScrollView:
				size_hint: (1, 1)

				GridLayout:
					id: info_content
					cols: 1
					size_hint: (1, None)
					height: self.minimum_height
					do_scroll_x: False
					padding: [dp(10), dp(20)]

					MDLabel:
						text: 'Info #1'
						size_hint_y: None
						height: dp(50)


<NotebookTopPanelElement>:
	orientation: 'horizontal'
	size_hint: (None, 1)
	width: dp(200)
	padding: [dp(10), dp(3), 0, 0]

	MDTextButton:
		id: tab_title
		size_hint: (1, 1)
		theme_text_color: 'Custom'
		text_color: app.theme_cls.opposite_text_color
		halign: 'left'
		valign: 'center'
		text: root.title

	MDIconButton:
		id: 'close_btn'
		size_hint: (None, None)
		size: (dp(50), dp(50))
		theme_text_color: 'Custom'
		text_color: app.theme_cls.opposite_text_color
		icon: 'close'
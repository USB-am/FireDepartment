<CallTabContent>:
	orientation: 'vertical'

	MDBottomNavigation:
		id: nav_bot

		MDBottomNavigationItem:
			name: 'calls'
			text: 'Вызовы'
			icon: 'phone'

			MDBoxLayout:
				id: calls
				orientation: 'vertical'
				size_hint: (1, 1)
				padding: [dp(10), 0]

		MDBottomNavigationItem:
			name: 'info'
			text: 'Информация'
			icon: 'fire'

			MDBoxLayout:
				id: info
				orientation: 'vertical'
				size_hint: (1, 1)
				padding: [dp(10), 0]


<PhoneTabContent>:
	orientation: 'vertical'

	ScrollView:
		MDBoxLayout:
			id: content
			orientation: 'vertical'
			size_hint: (1, None)
			height: self.minimum_height
			do_scroll_x: False
			padding: [dp(5), 0]
			spacing: dp(10)

			MDLabel:
				size_hint: (1, None)
				height: dp(50)
				text: root.title
				font_style: 'H5'

			MDLabel:
				pos_hint: {'x': 0, 'top': 1}
				adaptive_height: True
				theme_text_color: 'Secondary'
				text: root.description if root.description is not None else ''


<InfoTabContent>:
	orientation: 'vertical'
	size_hint: (1, 1)
	padding: (0, dp(5))

	ScrollView:
		MDBoxLayout:
			id: content
			orientation: 'vertical'
			size_hint: (1, None)
			height: self.minimum_height
			do_scroll_x: False
			padding: [dp(5), 0]
			spacing: dp(10)

			MDStackLayout:
				id: shorts_layout
				adaptive_height: True

			MDTextField:
				id: addition_info
				multiline: True
				color_mode: 'custom'
				normal_color: app.theme_cls.text_color
				text_color: app.theme_cls.text_color
				hint_text_color: app.theme_cls.text_color
				current_hint_text_color: app.theme_cls.text_color
				line_color_normal: app.theme_cls.text_color
				line_color_focus: app.theme_cls.text_color
				hint_text: 'Дополнительная информация'

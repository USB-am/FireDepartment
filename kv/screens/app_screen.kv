#:import NavigationButton ui.widgets.navigation_button
#:import LOGO_IMG config.LOGO_IMG


<FDUIManager>:
	ScreenManager:
		id: screen_manager

	MDNavigationDrawer:
		id: menu

		MDBoxLayout:
			orientation: 'vertical'
			size_hint: (1, 1)

			AnchorLayout:
				anchor_x: 'left'
				size_hint_y: None
				height: logo.height

				Image:
					id: logo
					size_hint: (None, None)
					size: (dp(100), dp(100))
					# source: 'static/logo.png'
					source: str(LOGO_IMG)

			MDLabel:
				text: 'FireDepartment'
				font_style: 'Button'
				font_size: sp(30)
				size_hint_y: None
				height: self.texture_size[1]

			MDBoxLayout:
				orientation: 'vertical'

				NavigationButton:
					id: main_nav_btn
					size_hint: (1, None)
					icon: 'home'
					text: 'Главная'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: tags_nav_btn
					size_hint: (1, None)
					icon: 'pound'
					text: 'Теги'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: ranks_nav_btn
					size_hint: (1, None)
					icon: 'chevron-triple-up'
					text: 'Звания'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: positions_nav_btn
					size_hint: (1, None)
					icon: 'crosshairs-gps'
					text: 'Должности'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: humans_nav_btn
					size_hint: (1, None)
					icon: 'account-group'
					text: 'Люди'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: emergencies_nav_btn
					size_hint: (1, None)
					icon: 'fire-alert'
					text: 'Вызовы'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					id: worktype_nav_btn
					size_hint: 1, None
					icon: 'timer-sand'
					text: 'Графики работы'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				NavigationButton:
					size_hint: 1, None
					icon: 'firebase'
					text: 'Информация о вызовах'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color

				MDBoxLayout:	# Separator layout

			MDBoxLayout:
				orientation: 'horizontal'
				size_hint_y: None
				height: dp(60)

				NavigationButton:
					id: options_nav_btn
					size_hint: 1, None
					icon: 'cog'
					text: 'Настройки'
					theme_text_color: 'Custom'
					theme_icon_color: 'Custom'
					icon_color: app.theme_cls.accent_color
					text_color: app.theme_cls.accent_color
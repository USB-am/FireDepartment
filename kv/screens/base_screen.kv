#:import FDToolbar ui.widgets.toolbar


<BaseScreen>:
	MDBoxLayout:
		orientation: 'vertical'
		size_hint: (1, 1)

		FDToolbar:
			id: toolbar
			title: root.toolbar_title

		MDBoxLayout:
			id: content
			orientation: 'vertical'
			size_hint: (1, 1)


<BaseScrollScreen>:
	MDBoxLayout:
		orientation: 'vertical'
		size_hint: (1, 1)

		FDToolbar:
			id: toolbar
			title: root.toolbar_title

		MDBoxLayout:
			id: content_container
			orientation: 'vertical'
			size_hint: (1, 1)

			ScrollView:
				id: scroll_content
				size_hint: (1, 1)

				on_scroll_y:
					if args[1] <= 0: root.end_list_event()

				GridLayout:
					id: content
					cols: 1
					size_hint: 1, None
					height: self.minimum_height
					do_scroll_x: False
					padding: [dp(10), dp(20)]